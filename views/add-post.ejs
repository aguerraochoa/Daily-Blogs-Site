<%- include("partials/header.ejs") %>

<section class="top-bar longer">
    <a href="/" class="top-bar-title">Daily Blogs</a>
    <a class="type-button" href="/logout">Logout</a>
</section>

<form action="/create-post" method="POST">
    <div class="form">
        <div class="form-group">
            <label class="label">Title</label>
            <input type="text" class="change-color form-control" name="title">
        </div>
        <div class="form-group">
            <label class="label">Description</label>
            <textarea class="change-color form-control" name="description" rows="7" columns="10"></textarea>
        </div>
    </div>
    <input type="submit" class="type-button" value="Create Post">
</form>



