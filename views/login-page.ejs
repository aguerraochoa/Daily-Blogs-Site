<section class="top-bar longer">
    <a href="/" class="top-bar-title">Daily Blogs</a>
</section>

<form action="/login" method="POST">
    <div class="form">
        <div class="form-group">
            <label class="label">User</label>
            <input type="text" class="change-color form-control" required name="username">
        </div>
        <div class="form-group">
            <label class="label">Password</label>
            <input type="password" class="change-color form-control" required name="password">
        </div>
    </div>
    <input type="submit" class="type-button sign-in" value="Sign In">
    <input formaction="/register" type="submit" class="type-button" value="Register">
</form>
<% if (locals.message && locals.message != "" ) { %>
    <p class="message"><%=message%></p>
<% } %>

