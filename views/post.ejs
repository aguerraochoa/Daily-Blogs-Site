<%- include("partials/header.ejs") %>

<section class="top-bar longer">
    <a href="/" class="top-bar-title">Daily Blogs</a>
    <a class="type-button" href="/logout">Logout</a>
</section>

<form action="/edit-post/<%=blog._id%>?_method=PUT" method="POST">
    <div class="form">
        <div class="form-group">
            <label class="label">Title</label>
            <input type="text" class="change-color form-control" name="title" value="<%=blog.title%>">
        </div>
        <div class="form-group">
            <label class="label">Description</label>
            <textarea class="change-color form-control" name="description" rows="7" cols="10"><%=blog.description%></textarea>
        </div>
    </div>
    <div class="buttons-edit">
        <input type="submit" class="type-button" value="Edit Blog">
        <input formaction="/delete-post/<%= blog._id %>?_method=DELETE" type="submit" value="Delete" class="type-button">    
    </div>
</form>

<%- include("partials/footer.ejs") %>